platform :ios, '11.0'

target 'BetDeez' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for BetDeez
  
  # We need to fix pod version ex   pod 'RxSwift', '4.1.0'
#Core
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'SwiftyJSON'

#Networking
  pod 'Alamofire'
  pod 'RxAlamofire'
  pod 'AlamofireNetworkActivityIndicator'
  pod 'AlamofireImage'
  
  target 'BetDeezTests' do
    inherit! :search_paths
    
    # Pods for testing
    pod 'RxTest'
  end

end
